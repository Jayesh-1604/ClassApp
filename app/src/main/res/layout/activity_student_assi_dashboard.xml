<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".studentAssiDashboard"
android:id="@+id/drawer"
tools:openDrawer="start">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/header">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffb700"
        app:titleTextColor="@color/black"
        app:title="Student Dashboard" />

    <Button
        android:id="@+id/btn_goto_teacher_sub_assigment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#ffb700"
        android:padding="6dp"
        android:text="Back To Assignments"
        android:onClick="BackToAssignmentsSubmittion"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:layout_below="@+id/toolbar"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/teacher_assign_sub_marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:hint="Enter Marks"
        android:layout_below="@id/btn_goto_teacher_sub_assigment"
        />

    <EditText
        android:id="@+id/teacher_assign_sub_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:hint="Enter Grade"
        android:layout_below="@id/teacher_assign_sub_marks"
        />


    <EditText
        android:id="@+id/teacher_assign_sub_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:hint="Any Remark"
        android:layout_below="@id/teacher_assign_sub_grade"
        />


    <Button
        android:id="@+id/btn_teacher_sub_assign_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacher_assign_sub_remarks"
        android:layout_centerHorizontal="true"
        android:background="#ffb700"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:padding="6dp"
        android:text="View PDF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="ViewAssignment"/>


    <Button
        android:id="@+id/btn_teacher_submit_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_teacher_sub_assign_view"
        android:layout_centerHorizontal="true"
        android:background="#ffb700"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:padding="6dp"
        android:text="Submit Feedback"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="FeedbackToAssignment"/>


</RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>

