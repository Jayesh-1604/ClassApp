<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img_class"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myclasses_name"
            android:text="Class Name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/img_class"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_class"
            android:layout_below="@+id/myclasses_name"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myclassRoom_pass_code"
                android:text="ClassCode"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/myclass_teacher_name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myclassRoom_pass_code"
                android:layout_marginLeft="10dp"
                android:text="Jayesh Wani"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>